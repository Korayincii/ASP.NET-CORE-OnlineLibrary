@{
    ViewData["Title"] = "Register";
}

@if (TempData["status"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["status"]
    </div>

}

@model Usera


<section class="vh-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6 text-black">

                <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                    <form asp-controller="User" asp-action="Registering" method="post" style="width: 23rem;">

                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h3>

                        <div class="form-outline mb-4">
                            <input required asp-for="Email" type="email" id="form2Example18" class="form-control form-control-lg" oninvalid="this.setCustomValidity('Please enter your email!')" />
                            <label asp-for="Email" class="form-label" for="form2Example18">Email address</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input asp-for="Password" required type="password" id="form2Example28" class="form-control form-control-lg" oninvalid="this.setCustomValidity('Please enter your password!')" />
                            <label asp-for="Password" class="form-label" for="form2Example28">Password</label>
                        </div>

                        <div class="form-outline mb-4">
                            <input name="cpas" required type="password" id="form2Example28" class="form-control form-control-lg" oninvalid="this.setCustomValidity('Please enter your repeat password!')" />
                            <label name="cpas" class="form-label" for="form2Example28">Repeat Password</label>
                        </div>

                        <div class="pt-1 mb-4">
                            <button style="color:white;" class="btn btn-info btn-lg btn-block" type="submit">Register</button>
                        </div>


                        <p>Already have an account? <a asp-controller="User" asp-action="Login" class="link-info">Login here</a></p>

                    </form>

                </div>

            </div>
            <div class="col-sm-6 px-0 d-none d-sm-block">
                <img src="https://media.cnn.com/api/v1/images/stellar/prod/200416164101-3-underscored-creative-writing-lead.jpg?q=w_3000,h_1684,x_0,y_0,c_fill"
                     alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
            </div>
        </div>
    </div>
</section>

